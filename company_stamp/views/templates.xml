                    <div>
                        <strong>Stamp</strong>
                        <img t-att-src="image_data_uri(o.company_id.stamp_pic)"
                             style="max-height: 4cm; max-width: 8cm;"/>
                    </div>
                </div>
            </xpath>

            <xpath expr="//th[@name='th_taxes']" position="replace">
            </xpath>
            <xpath expr="//td[@name='td_taxes']" position="replace">
            </xpath>

            <xpath expr="//th[@name='th_description']" position="replace">
                 <th name="th_description" class="text-center">Description</th>
            </xpath>

            <xpath expr="//th[@name='th_description']" position="after">
                <th name="th_default_code" class="text-left">Internal Reference</th>
            </xpath>
            <xpath expr="//td[@id='product']" position="replace">
                <td id="product">
                    <span t-field="line.product_id.name"/>
