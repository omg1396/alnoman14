<odoo>
    <data>

        <template id="quotation_report_add_stamp" inherit_id="sale.report_saleorder_document">
            <xpath expr="//div[@id='total']/div/table" position="after">
                <div t-if="doc.company_id.stamp_pic  and doc.print_stamp" name="stamp"
                     style="position:relative;right:160px;bottom:94px;">
                    <div>
                        <strong>Stamp</strong>
                        <img t-att-src="image_data_uri(doc.company_id.stamp_pic)"
                             style="max-height: 4cm; max-width: 8cm;"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@class='page']" position="attributes">
                <attribute name="style" add="font-family:Helvetica,Verdana,Arial,sans,Lucida Grande,Calibri;" separator=" "/>
            </xpath>
            <xpath expr="//div[@t-field='doc.partner_id']" position="replace">
                <div t-field="doc.partner_id"
                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' style="font-size:16px;font-weight:bold;"/>
            </xpath>

            <xpath expr="//div[hasclass('page')]//div[@id='informations']//div[@t-if='doc.user_id.name']"
                   position="replace">
            </xpath>

            <xpath expr="//div[@name='so_total_summary']" position="after">
                <br/>
                <br/>
                <div t-if="doc.user_id.name" style="direction:rtl;" class="text-right">
                    <strong>إسم المستخدم :</strong>
                    &#160;<strong t-field="doc.user_id"/>
                </div>
                <br/>
                <div t-if="doc.user_id.stamp_pic  and doc.print_stamp" name="stamp"
                     class="text-right" style="direction:rtl;">
                    <div>
                        <strong>التوقيع :</strong>
                        &#160;<img t-att-src="image_data_uri(doc.user_id.stamp_pic)"
                                   style="max-height: 4cm; max-width: 8cm;"/>
                    </div>
                </div>

            </xpath>

            <xpath expr="//th[@name='th_taxes']" position="replace">
            </xpath>
            <xpath expr="//td[@name='td_taxes']" position="replace">
            </xpath>
            <xpath expr="//th[@name='th_description']" position="replace">
                 <th name="th_description" class="text-center">Description</th>
            </xpath>
            <xpath expr="//th[@name='th_description']" position="after">
                <th name="th_default_code" class="text-left">Internal Reference</th>
            </xpath>
            <xpath expr="//td[@name='td_name']" position="replace">
                <td name="td_name">
                    <span t-field="line.product_id.name"/>
                </td>
            </xpath>
            <xpath expr="//td[@name='td_name']" position="after">
                <td name="td_default_code">
                    <span t-field="line.product_id.default_code"/>
                </td>
            </xpath>

            <xpath expr="//th[@name='th_description']" position="before">
                <th name="th_sequence">
                    <strong>No.</strong>
                </th>
            </xpath>
            <xpath expr="//table/tbody[hasclass('sale_tbody')]/t" position="before">
                <t t-set="current_index" t-value="0"/>
            </xpath>
            <xpath expr="//table[hasclass('o_main_table')]//tbody//td[@name='td_name']" position="before">
                <td name="td_sequence">
                    <t t-if="line.display_type != 'line_section' or line.display_type != 'line_note'">
                        <t t-set="current_index" t-value="current_index + 1"/>
                    </t>
                    <span t-esc="current_index"/>
                </td>
            </xpath>


        </template>


        <template id="invoice_report_add_stamp" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@class='page']" position="attributes">
                <attribute name="style" add="font-family:Helvetica,Verdana,Arial,sans,Lucida Grande,Calibri;" separator=" "/>
            </xpath>
            <xpath expr="//address[@t-field='o.partner_id']" position="replace">
                <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' style="font-size:16px;font-weight:bold;"/>
            </xpath>

            <xpath expr="//div[@id='total']/div/table" position="after">
                <div t-if="o.company_id.stamp_pic " name="stamp"
                     style="position:relative;right:160px;bottom:94px;">
                    <div>
                        <strong>Stamp</strong>
                        <img t-att-src="image_data_uri(o.company_id.stamp_pic)"
                             style="max-height: 4cm; max-width: 8cm;"/>
                    </div>
                </div>

                <xpath expr="//div[hasclass('clearfix')]" position="after">
                    <br/>
                    <br/>
                    <div t-if="o.invoice_user_id.name" style="direction:rtl;" class="text-right">
                        <strong>إسم المستخدم :</strong>
                        &#160;<strong t-field="o.invoice_user_id"/>
                    </div>
                    <br/>
                    <div t-if="o.invoice_user_id.stamp_pic" name="stamp"
                         class="text-right" style="direction:rtl;">
                        <div>
                            <strong>التوقيع :</strong>
                            &#160;<img t-att-src="image_data_uri(o.invoice_user_id.stamp_pic)"
                                       style="max-height: 4cm; max-width: 8cm;"/>
                        </div>
                    </div>

                </xpath>

            </xpath>
            <xpath expr="//th[@name='th_description']" position="replace">
                 <th name="th_description" class="text-center">Description</th>
            </xpath>
            <xpath expr="//th[@name='th_description']" position="after">
                <th name="th_default_code" class="text-left">Internal Reference</th>
            </xpath>
            <xpath expr="//th[@name='th_taxes']" position="replace">
            </xpath>
            <xpath expr="//td[5]" position="replace">
            </xpath>
            <xpath expr="//td[@name='account_invoice_line_name']" position="replace">
                <td name="account_invoice_line_name">
                    <span t-field="line.product_id.name" t-options="{'widget': 'text'}"/>
                </td>
            </xpath>
            <xpath expr="//td[@name='account_invoice_line_name']" position="after">
                <td name="td_default_code">
                    <span t-field="line.product_id.default_code"/>
                </td>
            </xpath>

            <xpath expr="//th[@name='th_description']" position="before">
                <th name="th_sequence">
                    <strong>No.</strong>
                </th>
            </xpath>
            <xpath expr="//table[hasclass('o_main_table')]/tbody/t" position="before">
                <t t-set="current_index" t-value="0"/>
            </xpath>
            <xpath expr="//table[hasclass('o_main_table')]//tbody//td[@name='account_invoice_line_name']" position="before">
                <td id="td_sequence">
                    <t t-if="line.display_type != 'line_section' or line.display_type != 'line_note'">
                        <t t-set="current_index" t-value="current_index + 1"/>
                    </t>
                    <span t-esc="current_index"/>
                </td>
            </xpath>

        </template>


        <template id="quotation_po_report_add_stamp" inherit_id="purchase.report_purchasequotation_document">
            <xpath expr="//table" position="after">
                <div t-if="o.company_id.stamp_pic  and o.print_stamp" name="stamp">
                    <div>
                        <strong>Stamp</strong>
                        <img t-att-src="image_data_uri(o.company_id.stamp_pic)"
                             style="max-height: 4cm; max-width: 8cm;"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@class='page']" position="attributes">
                <attribute name="style" add="font-family:Helvetica,Verdana,Arial,sans,Lucida Grande,Calibri;" separator=" "/>
            </xpath>
            <xpath expr="//div[@t-field='o.partner_id']" position="replace">
                <div t-field="o.partner_id"
            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' style="font-size:16px;font-weight:bold;"/>
            </xpath>

        </template>


        <template id="po_report_add_stamp" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//div[@class='page']" position="attributes">
