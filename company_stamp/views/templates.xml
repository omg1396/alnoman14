            </xpath>
            <xpath expr="//td[@id='product']" position="after">
                <td name="td_default_code">
                    <span t-field="line.product_id.default_code"/>
                </td>
            </xpath>
            <xpath expr="//table[@class='table table-sm']//tr[2]" position="replace">
            </xpath>

            <xpath expr="//th[@name='th_description']" position="before">
                <th name="th_sequence">
                    <strong>No.</strong>
                </th>
            </xpath>
            <xpath expr="//table[hasclass('o_main_table')]/tbody/t" position="before">
                <t t-set="current_index" t-value="0"/>
            </xpath>
            <xpath expr="//table[hasclass('o_main_table')]//tbody//td[@id='product']" position="before">
                <td id="td_sequence">
                    <t t-if="line.display_type != 'line_section' or line.display_type != 'line_note'">
                        <t t-set="current_index" t-value="current_index + 1"/>
                    </t>
                    <span t-esc="current_index"/>
                </td>
            </xpath>


        </template>


    </data>
</odoo>